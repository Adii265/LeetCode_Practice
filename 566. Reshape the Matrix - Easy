class Solution {
    public int[][] matrixReshape(int[][] mat, int r, int c) 
    {
        int m = mat.length;
        int n = mat[0].length;
        //int count = m*n;
        int[][] mat_new = new int[r][c];
        int i,j,k=0,l=0;
        if(r*c== m*n)
        {
        for(i = 0;i<m;i++)
        {
            for(j = 0;j<n;j++)
            {
                //System.out.print(i+" "+j+" "+k+" "+l);
                mat_new[k][l++] = mat[i][j];
                if(l == c)
                {
                    l = 0;
                    k++;
                }
                    
                
            }
            //System.out.println();
            
        }
        return mat_new;
        }
        else
        {
            return mat;
        }
    }
}

